// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  activeTenantId String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  userTenants   UserTenant[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String @map("user_id")
  type              String
  provider          String
  providerAccountId String @map("provider_account_id")
  refresh_token     String? @map("refresh_token")
  access_token      String? @map("access_token")
  expires_at        Int? @map("expires_at")
  token_type        String? @map("token_type")
  scope             String?
  id_token          String? @map("id_token")
  session_state     String? @map("session_state")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Tenant {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userTenants UserTenant[]
  prompts     Prompt[]
  promptGroups PromptGroup[]
  promptSettings PromptSetting[]
}

model UserTenant {
  id       String @id @default(cuid())
  userId   String @map("user_id")
  tenantId String @map("tenant_id")
  role     String @default("member") // admin, member, etc.

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([userId, tenantId])
  @@map("user_tenant")
}

model Prompt {
  id          String   @id @default(uuid())
  name        String
  description String?
  content     String
  variables   Json
  tenantId    String
  tenant      Tenant                @relation(fields: [tenantId], references: [id])
  groups      PromptGroupMapping[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PromptGroup {
  id          String   @id @default(uuid())
  name        String
  description String?
  tenantId    String
  tenant      Tenant                @relation(fields: [tenantId], references: [id])
  prompts     PromptGroupMapping[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PromptGroupMapping {
  id       String   @id @default(uuid())
  promptId String
  groupId  String
  prompt   Prompt   @relation(fields: [promptId], references: [id])
  group    PromptGroup @relation(fields: [groupId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PromptSetting {
  id          String   @id @default(uuid())
  name        String
  description String?
  tenantId    String
  tenant      Tenant                @relation(fields: [tenantId], references: [id])
  items       Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
